{

    "manifest_version": 2,
    "name": "Multicriteria",
    "version": "1.0",

    "description": "Graph popup",
    "icons": {
      "48": "icons/border-48.png"
    },

    "permissions": [
      "activeTab", "storage", "tabs"
    ],

    "browser_action": {
      "default_icon": "icons/border-48.png",
      "default_title": "Multicriteria",
      "default_popup": "popup/display_graph.html"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';"

  }
