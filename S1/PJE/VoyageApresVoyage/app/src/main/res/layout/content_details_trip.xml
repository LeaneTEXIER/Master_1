<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TripListAndDetails.DetailsTripActivity"
    tools:showIn="@layout/activity_details_trip"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nom_voyage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "0"
        android:textStyle="bold"
        android:textSize="@dimen/details_trip_text_size_name_trip"
        android:layout_margin="@dimen/margin_create_modif_note_champs"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "0"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/deb_voyage"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_margin="@dimen/margin_create_modif_note_champs"
            android:inputType="date"/>

        <TextView
            android:id="@+id/fin_voyage"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_margin="@dimen/margin_create_modif_note_champs"
            android:inputType="date"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "0"
        android:layout_margin="@dimen/margin_create_modif_note_champs"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/description_voyage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_weight = "1"
        android:layout_margin="@dimen/margin_create_modif_note_champs"
        android:scrollbars="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "0"
        android:orientation="horizontal">
        <Button
            android:id="@+id/consulter"
            android:layout_width="0dp"
            android:layout_height="@dimen/details_trip_height_button"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_create_modif_note_champs"
            android:text="@string/consult"
            android:textSize="@dimen/details_trip_text_size_buttons"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"/>

        <Button
            android:id="@+id/supprimer"
            android:layout_width="0dp"
            android:layout_height="@dimen/details_trip_height_button"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_create_modif_note_champs"
            android:text="@string/supp"
            android:textSize="@dimen/details_trip_text_size_buttons"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

</LinearLayout>
